        <% include ../partials/header %>
        <div class="movedarkbox"></div>
        <div class="signin">
            <div class="movedarkbox"></div>
            <div class="formsquare">
                <h2 style="margin-bottom: 10px; margin-top: 5px;">Sign Up!</h2>
                <p>Email:</p>
                <form style="margin-bottom: 15px;">
                    <input type="text" name="firstname" class="signinfields">
                </form>
                <p>Password:</p>
                <form style="margin-bottom: 25px;">
                    <input type="password" name="password" class="signinfields">
                </form>
                <p>Enter Password Again:</p>
                <form style="margin-bottom: 25px;">
                    <input type="password" name="password" class="signinfields">
                </form>
                <a href="http://localhost:7000/login" style="color: blue; font-size:15px; margin: 0 auto; text-decoration: underline;">Have an account? Log in!</a>
            </div>
        </div>
        <% include ../partials/footer.ejs %>
