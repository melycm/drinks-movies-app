<!doctype html>
<html lang="en">
  <head>
    <title>My Account</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css" type="text/css">
  </head>
  <body>
    <% include ../partials/header %>      
    <div class="accountpage">
        <div class="name">
            <h2>Hi!</h2>
            <a href="/login" style="text-align: center; border: solid 1px black; background: blue; padding: 5px;">Logout</a>
        </div>
        <div class="mymovies">
            <h4>My Favorited Movies</h4>
            <div class="clear">
            <a id="clearit" style="text-align: center; border: solid 1px black; background: blue; padding: 5px;">Clear Favorites</a>
            </div>
            <div class="cardcontainer row">
                <div class="card cardbackground text-white size col-md-4 col-12">
                    <img class="card-img" alt="Card image" id="movieposter1">
                    <div class="card-img-overlay cardtext">
                    <h5 class="card-title" id="title1"></h5>
                    </div>
                </div>
                <div class="card cardbackground text-white size col-md-4 col-12">
                    <img class="card-img" alt="Card image" id="movieposter2">
                    <div class="card-img-overlay cardtext">
                    <h5 class="card-title" id="title2"></h5>
                    </div>
                </div>
                <div class="card cardbackground text-white size col-md-4 col-12">
                    <img class="card-img" alt="Card image" id="movieposter3">
                    <div class="card-img-overlay cardtext">
                    <h5 class="card-title" id="title3"></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include ../partials/footer.ejs %>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/js/bootstrap.min.js" integrity="sha384-o+RDsa0aLu++PJvFqy8fFScvbHFLtbvScb8AjopnFD+iEQ7wo/CG0xlczd+2O/em" crossorigin="anonymous"></script>
    <script>

            var movieposter1 = document.getElementById("movieposter1");
            var title1 = document.getElementById("title1")
            var localposter1 = localStorage.getItem("poster1");
            var localtitle1 = localStorage.getItem("movie1");
            movieposter1.setAttribute('src', localposter1);
            title1.innerHTML = localtitle1;

            var movieposter2 = document.getElementById("movieposter2");
            var title2 = document.getElementById("title2")
            var localposter2 = localStorage.getItem("poster2");
            var localtitle2 = localStorage.getItem("movie2");
            movieposter2.setAttribute('src', localposter2);
            title2.innerHTML = localtitle2;

            var movieposter3 = document.getElementById("movieposter3");
            var title3 = document.getElementById("title3")
            var localposter3 = localStorage.getItem("poster3");
            var localtitle3 = localStorage.getItem("movie3");
            movieposter3.setAttribute('src', localposter3);
            title3.innerHTML = localtitle3;

            var clear = document.getElementById("clearit");
            clear.onclick = function() {
                localStorage.clear();
                location.reload();
            }
    </script>
  </body>
</html>